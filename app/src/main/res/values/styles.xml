<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:background">@drawable/screen_background_color_shape</item>
    </style>

    <style name="CalculationsScreenStyle" parent="ScreenStyle">
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="maxLines">1000</item>
    </style>

    <style name="AnswerScreenStyle" parent="ScreenStyle">
        <item name="android:gravity">center</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">16</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:text">@string/Clear</item>
        <item name="backgroundTint">@color/cancelButtonColor</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="shapeAppearance">@style/buttonShape</item>
    </style>

    <style name="buttonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="NumericButtonStyle" parent="ButtonStyle">
        <item name="android:textSize">21sp</item>
        <item name="backgroundTint">@color/numericButtonColor</item>
    </style>

    <style name="SymbolicButtonStyle" parent="ButtonStyle">
        <item name="android:textSize">25sp</item>
        <item name="backgroundTint">@color/symbolicButtonColor</item>
    </style>

    <style name="DeleteButtonStyle" parent="ButtonStyle">
        <item name="icon">@drawable/delete_button_icon</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/symbolicButtonColor</item>
    </style>
</resources>